    "null-loader": "^0.1.1",
    "p-queue": "^4.0.0",
    "prettier": "^1.14.3",
    "tree-kill": "^1.2.1",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
