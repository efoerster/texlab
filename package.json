  "bin": {
    "texlab": "dist/texlab.js"
  },
  "files": [
    "dist/texlab.js"
  ],
  "scripts": {
    "dist": "webpack",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "lint": "tslint --project .",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"*.{ts,json,yml,md}\" \".vscode/**/*.{json}\"",
    "test": "jest",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "coverageReporters": [
      "text",
      "html",
      "cobertura"
    ]
  },
  "devDependencies": {
    "@citation-js/core": "^0.4.0-rc.4",
